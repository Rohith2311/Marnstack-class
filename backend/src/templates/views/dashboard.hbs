<head>
    <style>
        img {
            width: 100px;
            height: 100px;
        }
    </style>
</head>
<form action="/dashboard" method="post" enctype="multipart/form-data">
    <input type="file" id="img-upload-input" name="image">
    <input type="submit" value="upload">
</form>
<table>
    <tr>
        {{#if images}}
        {{#each images as | image |}}
        {{#with images}}
        {{#with img}}
        <td>
            <img src="data:{{imgType}};base64,{{data}}">
        </td>
        {{/with}}
        {{/with}}   
        {{/each}}
        {{/if}}
    </tr>
</table>